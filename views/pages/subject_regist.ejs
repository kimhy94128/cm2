<% layout('../layout') %> 

<body>
  <!-- Sidenav -->
  <% include ../partials/sidebar %>
  <!-- Main content -->
  <div class="main-content">
    <!-- Top navbar -->
    <% include ../partials/navbar %>
    <!-- Header -->
    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8"></div>
    <!-- Page content -->
    <div class="container-fluid mt--7">
      <!-- Table -->

      <div class="col-xl-12 order-xl-1 mb-5">
        <div class="card bg-secondary shadow">
          <div class="card-header bg-white border-0">
            <div class="row align-items-center">
              <div class="col-8">
                <h3 class="mb-0">수강등록</h3>
              </div>
            </div>
          </div>
          <div class="card-body">
              <div class="pl-lg-4">
                <% if (locals.messages && messages.success) { %>
                  <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= messages.success %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">×</span>
                    </button>
                  </div>
                <% } %>
                <% if (locals.messages && messages.errors && messages.errors.databaseError) { %>
                  <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= messages.errors %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">×</span>
                    </button>
                  </div>
                <% } %>
                <form action="/attend" method="POST">
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group">
                        <input type="hidden" name="uid" value="<%= user.uid %>">
                        <label class="form-control-label" for="input-name">이름</label>
                        <input type="text" id="input-name" class="form-control form-control-alternative" value="<%= user.name %>" readonly>
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label" for="input-name">구분</label>
                        <div class="row mt-2">
                        <div class="custom-control custom-radio ml-3">
                          <input name="gender" class="custom-control-input" id="customRadio1" type="radio" value="남" <%= user.type === "전문반" ? 'checked' : '' %> required>
                          <label class="custom-control-label" for="customRadio1">전문반</label>
                        </div>
                        <div class="custom-control custom-radio ml-3">
                          <input name="gender" class="custom-control-input" id="customRadio2" type="radio" value="여" <%= user.type === "취미반" ? 'checked' : '' %> required>
                          <label class="custom-control-label" for="customRadio2">취미반</label>
                        </div>
                      </div>  
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label class="form-control-label" for="input-name">수강 과목 1</label>
                        <select name="" id="" class="form-control form-control-alternative">
                          <option value="">선택</option>
                        </select>
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label class="form-control-label" for="input-name">수강 과목 2</label>
                        <select name="" id="" class="form-control form-control-alternative">
                          <option value="">선택 1</option>
                        </select>
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label class="form-control-label" for="input-name">수강 과목 3</label>
                        <select name="" id="" class="form-control form-control-alternative">
                          <option value="">선택 1</option>
                        </select>
                      </div>
                    </div>
                    <div class="col-lg-8">
                      <div class="form-group">
                        <label class="form-control-label" for="input-name">수강료 총액</label>
                        <input type="text" id="input-name" class="form-control form-control-alternative" name="memo" placeholder="메모" required>
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label class="form-control-label" for="input-name">결제내용</label>
                        <select name="" id="" class="form-control form-control-alternative">
                          <option value="">직접 입력</option>
                        </select>
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label class="form-control-label" for="input-name">결제수단</label>
                        <select name="" id="" class="form-control form-control-alternative">
                          <option>선택</option>
                          <option value="카드">카드</option>
                          <option value="현금">현금</option>
                          <option value="포인트">포인트</option>
                          <option value="울산페이">울산페이</option>
                        </select>
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label class="form-control-label" for="input-name">결제일자</label>
                        <input type="date" id="input-name" class="form-control form-control-alternative">
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label class="form-control-label" for="input-name">결제금액</label>
                        <input type="text" id="input-name" class="form-control form-control-alternative">
                      </div>
                    </div>
                    <div class="col-lg-12 text-right">
                        <button type="submit" class="btn btn-primary">등록</button>
                    </div>
                  </div>
                </form>
              </div>
          </div>
        </div>
      </div>
      <!-- Footer -->
      <% include ../partials/footer %>
    </div>
  </div>

  <!-- Include scripts -->
  <% include ../partials/scripts %>
</body>
