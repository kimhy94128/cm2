<% layout('../layout') %> 

<body>
  <!-- Sidenav -->
  <% include ../partials/sidebar %>
  <!-- Main content -->
  <div class="main-content">
    <!-- Top navbar -->
    <% include ../partials/navbar %>
    <!-- Header -->
    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8"></div>
    <!-- Page content -->
    <div class="container-fluid mt--7">
      <!-- Table -->
      <div class="row">
        <div class="col">
          <div class="card shadow">
            <div class="card-header border-0">
              <div class="row align-items-center">
                <div class="col-8">
                  <h3 class="mb-0">출석부</h3>
                </div>
                <div class="col-4 text-right">
                  <select name="month">
                    <option>선택</option>
                    <% for(i=0; i<12; i++){ %>
                      <option value="<%= i %>"
                        <% if(month && month == i){ %>
                          selected
                        <% } else if (!month && new Date().getMonth() === i) { %>
                          selected
                        <% } %>
                        ><%= i+1 %></option>
                    <% } %> 
                  </select> 월
                </div>
              </div>
            </div>
            <div class="table-responsive">
              <table class="table align-items-center table-flush">
                <thead class="thead-light">
                  <tr>
                    <th>이름</th>
                    <th>시작일</th>
                    <th>종료일</th>
                    <% days.forEach(day => { %>
                      <% if(new Date(day).getDay() === 1 || new Date(day).getDay() === 3){ %>
                        <th scope="col"><%= new Date(day).getMonth()+1 %>/<%= new Date(day).getDate() %></th>
                      <% } %>
                    <% }) %>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach(user => { %>
                    <tr>
                      <td><%= user.name %></td>
                      <td><%= user.started %></td>
                      <td><%= user.ended %></td>
                      <% days.forEach(day => { %>
                        <% if(new Date(day).getDay() === 1 || new Date(day).getDay() === 3){ %>
                          <td>
                            <input type="checkbox">
                          </td>
                        <% } %>
                      <% }) %>
                    </tr>
                  <% }) %> 
                </tbody>
              </table>
            </div>
            <div class="card-footer py-4">
              <nav aria-label="...">
                <ul class="pagination justify-content-end mb-0">
                  <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">
                      <i class="fas fa-angle-left"></i>
                      <span class="sr-only">Previous</span>
                    </a>
                  </li>
                  <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                  </li>
                  <li class="page-item"><a class="page-link" href="#">3</a></li>
                  <li class="page-item">
                    <a class="page-link" href="#">
                      <i class="fas fa-angle-right"></i>
                      <span class="sr-only">Next</span>
                    </a>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>

    
      <script>
        document.querySelector('select[name=month]').addEventListener('change', function(){
          location.search = 'month=' + this.value;
        })
      </script>
      
      <!-- Footer -->
      <% include ../partials/footer %>
    </div>
  </div>

  <!-- Include scripts -->
  <% include ../partials/scripts %>
</body>
