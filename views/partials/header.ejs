<div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
  <div class="container-fluid">
    <div class="header-body">
      <!-- Card stats -->
      <div class="row">
        <div class="col-xl-3 col-lg-6">
          <div class="card card-stats mb-4 mb-xl-0">
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">회원수</h5>
                  <span class="h2 font-weight-bold mb-0"><%= totalUsers.length %>명</span>
                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-danger text-white rounded-circle shadow">
                    <i class="fas fa-chart-bar"></i>
                  </div>
                </div>
              </div>
              <p class="mt-3 mb-0 text-muted text-sm">
                <% if(totalUsers.length - totalUsersPrev.length > 0){ %>
                  <span class="text-success mr-2"><i class="fas fa-arrow-up"></i> <%= totalUsers.length - totalUsersPrev.length %></span>
                <% } else if (totalUsers.length - totalUsersPrev.length === 0) { %>
                  <span class="text-primary mr-2"><i class="fas fa-minus"></i> <%= totalUsers.length - totalUsersPrev.length %></span>
                <% } else { %>
                  <span class="text-danger mr-2"><i class="fas fa-arrow-down"></i> <%= Math.abs(totalUsers.length - totalUsersPrev.length) %></span>
                <% } %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-lg-6">
          <div class="card card-stats mb-4 mb-xl-0">
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">신규등록</h5>
                  <span class="h2 font-weight-bold mb-0"><%= newUsers.length %>명</span>
                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-warning text-white rounded-circle shadow">
                    <i class="fas fa-chart-pie"></i>
                  </div>
                </div>
              </div>
              <p class="mt-3 mb-0 text-muted text-sm">
                <% if(newUsers.length - newUsersPrev.length > 0){ %>
                  <span class="text-success mr-2"><i class="fas fa-arrow-up"></i> <%= newUsers.length - newUsersPrev.length %></span>
                <% } else if (newUsers.length - newUsersPrev.length === 0) { %>
                  <span class="text-primary mr-2"><i class="fas fa-minus"></i> <%= newUsers.length - newUsersPrev.length %></span>
                <% } else { %>
                  <span class="text-danger mr-2"><i class="fas fa-arrow-down"></i> <%= Math.abs(newUsers.length - newUsersPrev.length) %></span>
                <% } %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-lg-6">
          <div class="card card-stats mb-4 mb-xl-0">
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">미납자</h5>
                  <span class="h2 font-weight-bold mb-0"><%= nonpayers.length %>명</span>
                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-yellow text-white rounded-circle shadow">
                    <i class="fas fa-users"></i>
                  </div>
                </div>
              </div>
              <p class="mt-3 mb-0 text-muted text-sm">
                <span class="text-nowrap"><a href="/attend">납부 바로가기</a></span>
              </p>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-lg-6">
          <div class="card card-stats mb-4 mb-xl-0">
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">금일 수강회원</h5>
                  <span class="h2 font-weight-bold mb-0"> <%= todayUsers.length %>명</span>
                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-info text-white rounded-circle shadow">
                    <i class="fas fa-percent"></i>
                  </div>
                </div>
              </div>
              <p class="mt-3 mb-0 text-muted text-sm">
                <% if(todaySubjects[0] !== undefined){ %>
                  <span class="text-nowrap"><%= todaySubjects[0].s_name %>반 외 <%= todaySubjects.length %>건</span>
                <% } else { %>
                  <span class="text-nowrap">진행되는 수업이 없습니다.</span>
                <% } %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>